<div class="col-md-12">
  <h2>Edit Attachment</h2>
  <%= image_tag @attachment.image.url(:medium), class: "thumbnail" %>
  <%= form_for([@organisation,@article,@attachment], html: { multipart: true }) do |f| %>
      <div class="form-group">
        <label for="file">File input</label>
        <%= f.file_field :image %>
        <p class="help-block">Upload image file</p>
      </div>

      <div class="form-group">
        <%= f.submit "Update Attachment", class: "btn btn-danger" %>
      </div>
  <% end %>
</div>