<div class="col-md-4 col-md-offset-4 thumbnail">
  <%= link_to image_tag(@attachment.image.url(:medium)), @attachment.image.url %>
  <div class="caption">
    <h3>Version <%= @attachment.version %> of <%= @attachment.versions.count + 1 %></h3>

    <div class="button-group">
      <%= link_to "Edit", edit_organisation_article_attachment_path(@organisation, @article, @attachment), class: "btn btn-primary " %>
      <% if @attachment.version > 1 %>
          <%= link_to "Prev version", [@organisation, @article, @attachment, version: @attachment.version-1],  class: "btn btn-info"  %>
      <% end %>
      <% if params[:version] %>
          <%= link_to "Latest version", organisation_article_attachment_path,  class: "btn btn-danger"  %>
      <% end %>

    </div>


    <br><br>
    <%= link_to "Back to article", organisation_article_path(@organisation, @article), class: "btn btn-warning col-md-12" %>

  </div>
</div>