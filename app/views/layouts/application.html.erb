
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="">
  <meta name="author" content="">
  <title>Versioner</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <%= render 'layouts/shim' %>
</head>

<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "Versioner", root_path, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="<%= controller_name == "home" ? "active" : "" %>"><%= link_to "Home", root_path %></li>
        <li class="<%= controller_name == "organisations" ? "active" : "" %>"><%= link_to "Organisations", organisations_path %></li>
        <% if user_signed_in? %>
          <li class="pull-right"><%= link_to "Sign out", destroy_user_session_path, method: :delete %></li>
        <% else %>
          <li class="pull-right"><%= link_to "Sign in", new_user_session_path %></li>
        <% end %>
        <li class="pull-right">
        <% if user_signed_in? %>
            <form class="pull-right">
              <%= link_to "New Article", new_organisation_article_path(current_user.organisation), class: "btn navbar-btn btn-danger" %>
            </form>
        <% end %>
        </li>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div>

<div class="container">

  <div class="row">
    <div class="col-md-12">
      <% flash.each do |key, value| %>
          <div class="text-center alert-dismissible  <%= flash_class(key) %>" role="alert">
            <button type="button" class="close" data-dismiss="alert">
              <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
            </button>
            <%= value %>
          </div>
      <% end %>
    </div>
    </div>

    <div class="row">
      <%= yield %>
    </div>
  </div>
</div><!-- /.container -->
</body>
</html>
